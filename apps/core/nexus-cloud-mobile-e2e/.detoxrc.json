{
    "testRunner": {
        "args": {
            "$0": "jest",
            "config": "./jest.config.json"
        },
        "jest": {
            "setupTimeout": 120000
        }
    },
    "apps": {
        "ios.debug": {
            "type": "ios.app",
            "build": "cd ../../../apps/core/nexus-cloud-mobile/ios && xcodebuild -workspace NexusCloudMobile.xcworkspace -scheme NexusCloudMobile -configuration Debug -sdk iphonesimulator -destination 'platform=iOS Simulator,name=iPhone 14' -derivedDataPath ./build -quiet",
            "binaryPath": "../../../apps/core/nexus-cloud-mobile/ios/build/Build/Products/Debug-iphonesimulator/NexusCloudMobile.app"
        },
        "ios.release": {
            "type": "ios.app",
            "build": "cd ../../../apps/core/nexus-cloud-mobile/ios && xcodebuild -workspace NexusCloudMobile.xcworkspace -scheme NexusCloudMobile -configuration Release -sdk iphonesimulator -destination 'platform=iOS Simulator,name=iPhone 14' -derivedDataPath ./build -quiet",
            "binaryPath": "../../../apps/core/nexus-cloud-mobile/ios/build/Build/Products/Release-iphonesimulator/NexusCloudMobile.app"
        },

        "ios.eas": {
            "type": "ios.app",
            "build": "pnpm exec nx run nexus-cloud-mobile:download --platform ios --distribution simulator --output=../../../apps/core/nexus-cloud-mobile/dist/",
            "binaryPath": "../../../apps/core/nexus-cloud-mobile/dist/NexusCloudMobile.app"
        },
        "ios.local": {
            "type": "ios.app",
            "build": "pnpm exec nx run nexus-cloud-mobile:build --platform ios --profile preview --wait --local --no-interactive --output=../../../apps/core/nexus-cloud-mobile/dist/NexusCloudMobile.tar.gz",
            "binaryPath": "../../../apps/core/nexus-cloud-mobile/dist/NexusCloudMobile.app"
        },

        "android.debug": {
            "type": "android.apk",
            "build": "cd ../../../apps/core/nexus-cloud-mobile/android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug",
            "binaryPath": "../../../apps/core/nexus-cloud-mobile/android/app/build/outputs/apk/debug/app-debug.apk"
        },
        "android.release": {
            "type": "android.apk",
            "build": "cd ../../../apps/core/nexus-cloud-mobile/android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release",
            "binaryPath": "../../../apps/core/nexus-cloud-mobile/android/app/build/outputs/apk/release/app-release.apk"
        },

        "android.eas": {
            "type": "android.apk",
            "build": "pnpm exec nx run nexus-cloud-mobile:download --platform android --distribution simulator --output=../../../apps/core/nexus-cloud-mobile/dist/",
            "binaryPath": "../../../apps/core/nexus-cloud-mobile/dist/NexusCloudMobile.apk"
        },
        "android.local": {
            "type": "android.apk",
            "build": "pnpm exec nx run nexus-cloud-mobile:build --platform android --profile preview --wait --local --no-interactive --output=../../../apps/core/nexus-cloud-mobile/dist/NexusCloudMobile.apk",
            "binaryPath": "../../../apps/core/nexus-cloud-mobile/dist/NexusCloudMobile.apk"
        }
    },
    "devices": {
        "simulator": {
            "type": "ios.simulator",
            "device": {
                "type": "iPhone 14"
            }
        },
        "emulator": {
            "type": "android.emulator",
            "device": {
                "avdName": "Pixel_4a_API_30"
            }
        }
    },
    "configurations": {
        "ios.sim.release": {
            "device": "simulator",
            "app": "ios.release"
        },
        "ios.sim.debug": {
            "device": "simulator",
            "app": "ios.debug"
        },

        "ios.sim.eas": {
            "device": "simulator",
            "app": "ios.eas"
        },
        "ios.sim.local": {
            "device": "simulator",
            "app": "ios.local"
        },

        "android.emu.release": {
            "device": "emulator",
            "app": "android.release"
        },
        "android.emu.debug": {
            "device": "emulator",
            "app": "android.debug"
        },

        "android.emu.eas": {
            "device": "emulator",
            "app": "android.eas"
        },
        "android.emu.local": {
            "device": "emulator",
            "app": "android.local"
        }
    }
}
